proc printer {a b c } {
	puts "$a $b $c"}
printer ls 2 3
proc execute_and_test { cmd str } {
	expect "$ " {send "$cmd\r" }
	expect "$ " {
		puts "$cmd $str"
		if {[string match "*$str*" $expect_out(buffer)]} {
			 send_user "PASS"
				 send "\r"
		} else {
			send_user "FAIL"
				exit 127
		}
	}
}

